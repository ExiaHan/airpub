doctype 5
html(ng-app="mua")
  head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1.0")
    title 
        block title
            | #{site.name}
    link(rel='shortcut icon',type="image/x-icon",href="/images/favicon.ico")
    link(rel='stylesheet', href='/css/style.css')
  body
    block header
        include header
    block content
        #content.clearfix
            block main
            block sidebar
    block footer
        #footer
            .container
                .row
                    .col-lg-12
                        .footer &copy; #{ new Date().getFullYear() } #{site.name} #{site.desc}
    
    script(src="/js/lib/jquery/jquery-1.10.2.min.js")
    script(src="/js/lib/jquery.backstretch.min.js")
    script(src="/js/lib/bootstrap/bootstrap.min.js")
    script(src="/js/lib/angular/angular.min.js")
    script(src="/js/lib/angular/angular-resource.min.js")
    script(src="/js/lib/angular/angular-store.js")
    script(src="/js/app.js")
    script(src="/js/banner.js")
    block js
