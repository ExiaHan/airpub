{
  "name": "mua",
  "version": "0.1.0",
  "description": "the missing blog platform built upon love",
  "main": "app.js",
  "author": "turing <o.u.turing@gmail.com>",
  "license": "MIT",
  "scripts": {
    "open": "sleep 2 && open http://localhost:3000",
    "serve": "./node_modules/.bin/serve --no-less .",
    "less": "./node_modules/.bin/lessc ./less/style.less ./css/style.css",
    "watch": "./node_modules/.bin/rewatch *.less -c 'npm run less'",
    "dev": "npm run watch & npm run serve",
    "start": "npm run dev && npm run open"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/turingou/mua.git"
  },
  "bugs": {
    "url": "https://github.com/turingou/mua/issues"
  },
  "keywords": [
    "mua",
    "blog",
    "cms",
    "angular"
  ],
  "devDependencies": {
    "less": "~1.7.3",
    "rewatch": "~0.2.2",
    "serve": "~1.4.0"
  }
}
